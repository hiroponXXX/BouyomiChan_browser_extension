{
  "name": "HighChat2Boyomi Transfer",
  "version": "2.0.0",
  "manifest_version": 3,
  "browser_specific_settings":{
    "gecko": {
      "id": "{551f9090-146e-4e3e-8ae1-825e2a2c08ff}"
    }
  },
  "description": "配信チャットのコメントデータを棒読みちゃんにWebsocketプラグイン経由で転送します。",
  "icons": {
    "48":"icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": ["storage"],
  "content_scripts": [{
    "matches": ["*://*.ikasekai.com/highchat/live/*"],
    "js": [
      "content.js"
    ]
  }],
  "action": {
    "default_icon": {
      "48": "icon.png"
    }
  }
}