{
  "name": "HighChat2Boyomi Transfer",
  "version": "2.0.0",
  "manifest_version": 3,
  "description": "配信チャットのコメントデータを棒読みちゃんにWebsocketプラグイン経由で転送します。",
  "icons": {
    "48":"icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": ["storage"],
  "content_scripts": [{
    "matches": ["*://*.ikasekai.com/highchat/live/*"],
    "js": [
      "content.js"
    ]
  }],
  "action": {
    "default_icon": {
      "48": "icon.png"
    }
  }
}